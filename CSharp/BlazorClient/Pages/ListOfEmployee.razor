@page "/ListOfEmployee"
@inherits EmployeeList


<h3>ListOfEmployee</h3>

@if (Employees != null)
{
    

<div class="row">
    @foreach (var employee in Employees)
    {
        <div class="card m-3" style="min-width: 12rem; max-width: 30.5%;">
            <div class="card-header">
                <h1>@employee.userName @employee.lastName</h1>
               
            </div>
            <img class = "card-img-top" src="img/employeeimg.png"/>
            
            
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                 <a href="#" class="btn btn-danger m-1">Delete</a>

            </div>
            
        </div>
    }
    
</div>



}

 