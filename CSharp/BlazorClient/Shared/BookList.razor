@using System.Net.Http.Headers
@inherits BookListBase

@if (BookService.Books == null || BookService.Books.Count == 0)
{
    <span>@BookService.Message</span>
}
else
{
    <ul class="list-unstyled">
        @foreach (var book  in BookService.Books)
        {
            <li class="media my-3">
                <div class="media-img-wrapper mr-2">
                    <a href="/BookDetails/@book.Isbn">
                        <img class="media-img" src="@book.ImageUrl" alt="@book.Title"/>
                    </a>
                </div>
                <div class="media-body">
                    <a href="/BookDetails/@book.Isbn">
                        <h4 class="mb-0">@book.Title</h4>
                    </a>
                    <p>@book.Description</p>
                    <h5 class="price">
                        $@book.Price
                    </h5>
                </div>
            </li>
        }
    </ul>
}
